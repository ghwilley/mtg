<h1>Index</h1>


<h1>Welcome!</h1>

<%= form_tag(cards_path, :method => "get", id: "search-form") do %>
<!-- text field tag=action,args,identifier,placeholdertext... -->
<%= text_field_tag :search, params[:search], class: "search-query", placeholder: "Card Search", type: "search", data: {autocomplete: cards_autocomplete_card_name_path} %>  

<%= submit_tag "Delve" %>
<%end%>
<script type="text/javascript" charset="utf-8">
  $('#search').bind('railsAutocomplete.select', function(event, data){
  $('#search-form').submit()
  });
</script>

<table>
  <thead>
    <tr>
      <th>Cube preview</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
     
        <td><%= link_to 'Details', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you fucking sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

